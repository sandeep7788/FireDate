<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Start.LoginActivity">


    <ImageView
        android:id="@+id/imageStart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/gradient"/>


    <pl.droidsonroids.gif.GifImageView
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:foregroundGravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/videocallgif"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorBlackAlpha"
        android:orientation="vertical"
        android:padding="20dp">


        <Button
            android:visibility="gone"
            android:id="@+id/buttonStartFacebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_capsule"
            android:backgroundTint="@color/colorFacebook"
            android:text="Log in With Facebook"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buttonStartEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_capsule"
            android:backgroundTint="@color/colorEmail"
            android:text="Login With Email"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="By logging in you agree to FireDate's Terms of Service and Privacy Policy."
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="12sp" />


    </LinearLayout>
</RelativeLayout>